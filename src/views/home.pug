doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zyum
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        <link rel="stylesheet" type="text/css" href='/public/main.css'>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        
    body 
        main
            div#welcome
                form
                    input(placeholder="room name", id="room_name", required, type="text")
                    input(placeholder="nick name", id="nick_name" required, type="text")
                    button Enter room
                h4 Open ROoms:
                ul#available-rooms
            div#room
                h3.room-name
                h3.nickname
                form#name
                    input(placeholder="nickname", required, type="text")
                    button Save

                div.streamsContainer
                    div#myStream.card
                        div.video_container
                            video#myFace(autoplay, playsinline, width="400", height="300")
                            div.video-controls
                                span#mute.material-symbols-outlined volume_up
                                span#camera.material-symbols-outlined videocam

                        select#cameras
                    div#peersStream.card
                        video#peersFace(autoplay, playsinline, width="400", height="300")
                
                div#messages-container.card
                    ul.messages-chat
                    form#msg
                        input(placeholder="message", required, type="text")
                        button.material-symbols-outlined send
            

            
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")